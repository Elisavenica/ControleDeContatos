@using ControleDeContatos.Enums
@model UsuarioModel

@{
    ViewData["Title"] = "Editar Usuário";
}

<div class="text-center mb-4">
    <h1 class="display-4">Editar Usuário</h1>
</div>

<form asp-controller="Usuario" asp-action="Editar" method="post">

    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label>Nome</label>
        <input asp-for="Nome" class="form-control" />
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-group mb-3">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="form-group mb-3">
        <label>Login</label>
        <input asp-for="Login" class="form-control" />
        @Html.ValidationMessageFor(x => x.Login)
    </div>

    <div class="form-group mb-4">
        <label>Perfil</label>
        <select asp-for="Perfil"
                class="form-control"
                asp-items="Html.GetEnumSelectList<PerfilEnum>()">
            <option value="">Selecione</option>
        </select>
        @Html.ValidationMessageFor(x => x.Perfil)
    </div>

    <button type="submit" class="btn btn-primary">Editar</button>
    <a asp-controller="Usuario" asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>