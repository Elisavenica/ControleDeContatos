@using ControleDeContatos.Enums
@model UsuarioModel
@{
    ViewData["Title"] = "Criar usuario";
}

<div class="text-center">
    <h1 class="display-4">Cadastrar usuario</h1>
</div>

<form asp-controller="Usuario" asp-action="Criar" method="post">

    <div class="form-group">
        <label>Nome</label>
        <input asp-for="Nome" class="form-control" placeholder="Digite o nome do usuário" />
        @Html.ValidationMessageFor(model => model.Nome)
    </div>

    <div class="form-group">
        <label>E-mail</label>
        <input asp-for="Email" class="form-control" placeholder="Digite o e-mail do usuário" />
        @Html.ValidationMessageFor(model => model.Email)
    </div>

    <div class="form-group">
        <label>Perfil</label>
        <input asp-for="Perfil" class="form-control" placeholder="Digite o celular do usuário" />
        @Html.ValidationMessageFor(model => model.Perfil)
        <select asp-for="Perfil">
            <option value="0">Selecione</option>
            <option value="@PerfilEnum.Admin" >Administrador</option>
            <option value="@PerfilEnum.Admin" >Padrão</option>
        </select>
    </div>

    <div class="form-group">
        <label>Senha</label>
        <input asp-for="Senha" class="form-control" placeholder="Digite o celular do usuário" />
        @Html.ValidationMessageFor(model => model.Senha)
    </div>

    <div class="form-group">
        <label>DataCadastro</label>
        <input asp-for="DataCadastro" class="form-control" placeholder="Digite o celular do usuário" />
        @Html.ValidationMessageFor(model => model.DataCadastro)
    </div>

    <div class="form-group">
        <label>DataAtualizacao</label>
        <input asp-for="DataAtualizacao" class="form-control" placeholder="Digite o celular do usuário" />
        @Html.ValidationMessageFor(model => model.DataAtualizacao)
    </div>

    <hr />

    <h4>Endereço</h4>

    <div class="form-group">
        <label>Rua</label>
        <input asp-for="Rua" class="form-control" placeholder="Digite a rua" />
        @Html.ValidationMessageFor(model => model.Rua)
    </div>

    <div class="form-group">
        <label>Número</label>
        <input asp-for="Numero" class="form-control" placeholder="Número" />
        @Html.ValidationMessageFor(model => model.Numero)
    </div>

    <div class="form-group">
        <label>Bairro</label>
        <input asp-for="Bairro" class="form-control" placeholder="Digite o bairro" />
        @Html.ValidationMessageFor(model => model.Bairro)
    </div>

    <div class="form-group">
        <label>Cidade</label>
        <input asp-for="Cidade" class="form-control" placeholder="Digite a cidade" />
        @Html.ValidationMessageFor(model => model.Cidade)
    </div>

    <div class="form-group">
        <label>Estado</label>
        <input asp-for="Estado" class="form-control" placeholder="Ex: PE" />
        @Html.ValidationMessageFor(model => model.Estado)
    </div>

    <div class="form-group">
        <label>CEP</label>
        <input asp-for="Cep" class="form-control" placeholder="00000-000" />
        @Html.ValidationMessageFor(model => model.Cep)
    </div>

    <br />

    <button type="submit" class="btn btn-primary btn-block">Adicionar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Contato" asp-action="Index">Voltar</a>

</form>
