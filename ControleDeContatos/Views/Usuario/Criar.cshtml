@using ControleDeContatos.Enums
@model UsuarioModel

@{
    ViewData["Title"] = "Criar usuário";
}

<div class="container-fluid mt-4" style="max-width: 95%;">

    <div class="text-center mb-4">
        <h3 class="text-secondary" style="font-weight: 500;">Cadastrar usuário</h3>
        <p class="text-muted small">Preencha as informações do novo usuário do sistema</p>
    </div>

    <form asp-controller="Usuario"
          asp-action="Criar"
          method="post"
          class="text-start shadow-sm p-5 rounded bg-white border-top border-primary border-3">

        <div class="mb-3">
            <label class="form-label text-muted">Nome</label>
            <input asp-for="Nome" class="form-control" />
            <span class="text-danger small">@Html.ValidationMessageFor(x => x.Nome)</span>
        </div>

        <div class="mb-3">
            <label class="form-label text-muted">E-mail</label>
            <input asp-for="Email" class="form-control" />
            <span class="text-danger small">@Html.ValidationMessageFor(x => x.Email)</span>
        </div>

        <div class="mb-3">
            <label class="form-label text-muted">Login</label>
            <input asp-for="Login" class="form-control" />
            <span class="text-danger small">@Html.ValidationMessageFor(x => x.Login)</span>
        </div>

        <div class="mb-3">
            <label class="form-label text-muted">Perfil</label>
            <select asp-for="Perfil"
                    class="form-select"
                    asp-items="Html.GetEnumSelectList<PerfilEnum>()">
                <option value="">Selecione</option>
            </select>
            <span class="text-danger small">@Html.ValidationMessageFor(x => x.Perfil)</span>
        </div>

        <div class="mb-4">
            <label class="form-label text-muted">Senha</label>
            <input asp-for="Senha" type="password" class="form-control" />
            <span class="text-danger small">@Html.ValidationMessageFor(x => x.Senha)</span>
        </div>

        <div class="d-grid gap-3 mt-4">
            <button type="submit" class="btn btn-primary btn-lg">Adicionar Usuário</button>
            <a asp-controller="Usuario" asp-action="Index"
               class="btn btn-link text-secondary text-decoration-none">
                Voltar para a listagem
            </a>
        </div>
    </form>
</div>