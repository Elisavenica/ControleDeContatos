@model List<UsuarioModel>

@{
    ViewData["Title"] = "Listagem de Usuários";
}

<div class="card shadow-sm p-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Listagem de Usuários</h2>

        <a class="btn btn-primary"
           asp-controller="Usuario"
           asp-action="Criar">
            Adicionar novo usuário
        </a>
    </div>

    <table id="tabelaUsuarios" class="table table-striped align-middle" style="width:100%">

        <thead>
            <tr>
                <th>#</th>
                <th>Nome</th>
                <th>E-mail</th>
                <th>Login</th>
                <th>Perfil</th>
                <th class="text-center">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usuario in Model)
            {
                <tr>
                    <td>@usuario.Id</td>
                    <td>@usuario.Nome</td>
                    <td>@usuario.Email</td>
                    <td>@usuario.Login</td>
                    <td>
                        <span class="badge bg-secondary">
                            @usuario.Perfil
                        </span>
                    </td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a asp-controller="Usuario"
                               asp-action="Editar"
                               asp-route-id="@usuario.Id"
                               class="btn btn-primary btn-sm">
                                Editar
                            </a>

                            <a asp-controller="Usuario"
                               asp-action="ApagarConfirmacao"
                               asp-route-id="@usuario.Id"
                               class="btn btn-danger btn-sm">
                                Apagar
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tabelaUsuarios').DataTable({
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/pt-BR.json"
                }
            });
        });
    </script>
}
