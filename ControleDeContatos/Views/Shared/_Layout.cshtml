<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Controle De Contatos</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ControleDeContatos.styles.css" asp-append-version="true" />
</head>

<body>
    <div class="layout">

        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="logo">
                <h5>Controle De Contatos</h5>
            </div>

            <nav class="nav flex-column">
                <a class="nav-link" asp-controller="Home" asp-action="Index">🏠 Início</a>
                <a class="nav-link" asp-controller="Contato" asp-action="Index">📇 Contatos</a>
                <a class="nav-link" asp-controller="Usuario" asp-action="Index">👤 Usuários</a>
            </nav>
        </aside>

        <!-- Conteúdo principal -->
        <div class="main-content">

            <!-- Navbar superior -->
            <header class="topbar">
                <div class="container-fluid">
                </div>
            </header>

            <main class="content-area container-fluid">
                @RenderBody()
            </main>

        </div>
    </div>

    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
