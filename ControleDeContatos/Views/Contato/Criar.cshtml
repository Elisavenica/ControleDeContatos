@model ContatoModel
@{
    ViewData["Title"] = "Criar contato";
}

@* 1. Aumentamos o max-width para 95% para ocupar a página toda *@
<div class="container-fluid mt-4" style="max-width: 90%;">

    <div class="text-center mb-4">
        @* 2. Ajustamos o peso da fonte para 500 (um pouco mais grossa que a anterior) *@
        <h3 class="text-secondary" style="font-weight: 500;">Criar Novo Contato</h3>
        <p class="text-muted small">Preencha os dados abaixo para sua agenda</p>
    </div>

    @* O formulário agora vai se expandir horizontalmente acompanhando o container *@
    <form asp-controller="Contato" asp-action="Criar" method="post" class="text-start shadow-sm p-5 rounded bg-white border-top border-primary border-3">

        @* Campos um abaixo do outro conforme solicitado *@
        <div class="mb-3">
            <label class="form-label text-muted fw-normal">Nome Completo</label>
            <input type="text" asp-for="Nome" class="form-control" placeholder="Ex: João Silva" />
            <span class="text-danger small">@Html.ValidationMessageFor(x => x.Nome)</span>
        </div>

        <div class="mb-3">
            <label class="form-label text-muted fw-normal">E-mail</label>
            <input type="email" asp-for="Email" class="form-control" placeholder="email@exemplo.com" />
            <span class="text-danger small">@Html.ValidationMessageFor(x => x.Email)</span>
        </div>

        <div class="mb-3">
            <label class="form-label text-muted fw-normal">Celular</label>
            <input type="text" asp-for="Celular" class="form-control" placeholder="(00) 00000-0000" />
            <span class="text-danger small">@Html.ValidationMessageFor(x => x.Celular)</span>
        </div>

        <hr class="my-4" />
        <h5 class="text-secondary mb-3" style="font-weight: 500;">Dados de Endereço</h5>

        <div class="mb-3">
            <label class="form-label text-muted fw-normal">Logradouro (Rua/Avenida)</label>
            <input type="text" asp-for="Rua" class="form-control" />
            <span class="text-danger small">@Html.ValidationMessageFor(x => x.Rua)</span>
        </div>

        <div class="mb-3">
            <label class="form-label text-muted fw-normal">Número</label>
            <input type="text" asp-for="Numero" class="form-control" style="max-width: 150px;" />
            <span class="text-danger small">@Html.ValidationMessageFor(x => x.Numero)</span>
        </div>

        <div class="mb-3">
            <label class="form-label text-muted fw-normal">Bairro</label>
            <input type="text" asp-for="Bairro" class="form-control" />
            <span class="text-danger small">@Html.ValidationMessageFor(x => x.Bairro)</span>
        </div>

        <div class="mb-3">
            <label class="form-label text-muted fw-normal">Cidade</label>
            <input type="text" asp-for="Cidade" class="form-control" />
            <span class="text-danger small">@Html.ValidationMessageFor(x => x.Cidade)</span>
        </div>

        <div class="mb-3">
            <label class="form-label text-muted fw-normal">Estado (UF)</label>
            <input type="text" asp-for="Estado" class="form-control" maxlength="2" style="max-width: 100px;" />
            <span class="text-danger small">@Html.ValidationMessageFor(x => x.Estado)</span>
        </div>

        <div class="mb-4">
            <label class="form-label text-muted fw-normal">CEP</label>
            <input type="text" asp-for="Cep" class="form-control" placeholder="00000-000" style="max-width: 200px;" />
            <span class="text-danger small">@Html.ValidationMessageFor(x => x.Cep)</span>
        </div>

        <div class="d-grid gap-3 mt-5">
            <button type="submit" class="btn btn-primary btn-lg shadow-sm">Criar Contato</button>
            <a class="btn btn-link text-decoration-none text-secondary" asp-controller="Contato" asp-action="Index">Voltar para a Listagem</a>
        </div>
    </form>
</div>