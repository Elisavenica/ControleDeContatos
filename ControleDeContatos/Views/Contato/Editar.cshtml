@model ContatoModel
@{
    ViewData["Title"] = "Editar Contato";
}

<div class="container-fluid mt-4">

    <div class="card shadow p-4 bg-white rounded">

        <h2 class="text-center mb-4">Editar Contato</h2>

        <form asp-controller="Contato" asp-action="Editar" method="post">

            <input type="hidden" asp-for="Id" />

            <!-- DADOS PRINCIPAIS -->
            <div class="row mb-3">
                <div class="col-md-12">
                    <label class="form-label">Nome Completo</label>
                    <input asp-for="Nome" class="form-control" />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label">E-mail</label>
                    <input asp-for="Email" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Celular</label>
                    <input asp-for="Celular" class="form-control" />
                </div>
            </div>

            <hr />

            <!-- ENDEREÇO -->
            <h5 class="mb-3">Atualizar Endereço</h5>

            <div class="row mb-3">
                <div class="col-md-8">
                    <label class="form-label">Rua</label>
                    <input asp-for="Rua" class="form-control" />
                </div>

                <div class="col-md-4">
                    <label class="form-label">Nº</label>
                    <input asp-for="Numero" class="form-control" />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label">Bairro</label>
                    <input asp-for="Bairro" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Cidade</label>
                    <input asp-for="Cidade" class="form-control" />
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-3">
                    <label class="form-label">Estado</label>
                    <input asp-for="Estado" class="form-control" />
                </div>

                <div class="col-md-3">
                    <label class="form-label">CEP</label>
                    <input asp-for="Cep" class="form-control" />
                </div>
            </div>

            <!-- BOTÕES -->
            <div class="row">
                <div class="col-md-6">
                    <button type="submit" class="btn btn-success w-100">
                        Salvar Alterações
                    </button>
                </div>

                <div class="col-md-6">
                    <a asp-action="Index"
                       asp-controller="Contato"
                       class="btn btn-outline-secondary w-100">
                        Voltar para a lista
                    </a>
                </div>
            </div>

        </form>

    </div>
</div>