@model ContatoModel
@{
    ViewData["Title"] = "Editar contato";
}

<div class="container mt-4" style="max-width: 700px;">
    <div class="text-center mb-4">
        <h1 class="display-4">Editar Contato</h1>
    </div>

    <form asp-controller="Contato" asp-action="Editar" method="post" class="text-start shadow p-4 rounded bg-light border-primary border-top border-4">

        @* Importante: o hidden field garante que o ID não se perca e seja tipado *@
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label fw-bold">Nome Completo</label>
            <input type="text" asp-for="Nome" class="form-control" />
            <span class="text-danger small">@Html.ValidationMessageFor(x => x.Nome)</span>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label fw-bold">E-mail</label>
                <input type="email" asp-for="Email" class="form-control" />
                <span class="text-danger small">@Html.ValidationMessageFor(x => x.Email)</span>
            </div>
            <div class="col-md-6 mb-3">
                <label class="form-label fw-bold">Celular</label>
                <input type="text" asp-for="Celular" class="form-control" />
                <span class="text-danger small">@Html.ValidationMessageFor(x => x.Celular)</span>
            </div>
        </div>

        <hr class="my-4" />
        <h4 class="mb-3 text-muted">Atualizar Endereço</h4>

        <div class="row">
            <div class="col-md-9 mb-3">
                <label class="form-label fw-bold">Rua</label>
                <input type="text" asp-for="Rua" class="form-control" />
                <span class="text-danger small">@Html.ValidationMessageFor(x => x.Rua)</span>
            </div>
            <div class="col-md-3 mb-3">
                <label class="form-label fw-bold">Nº</label>
                <input type="text" asp-for="Numero" class="form-control" />
                <span class="text-danger small">@Html.ValidationMessageFor(x => x.Numero)</span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label fw-bold">Bairro</label>
                <input type="text" asp-for="Bairro" class="form-control" />
                <span class="text-danger small">@Html.ValidationMessageFor(x => x.Bairro)</span>
            </div>
            <div class="col-md-6 mb-3">
                <label class="form-label fw-bold">Cidade</label>
                <input type="text" asp-for="Cidade" class="form-control" />
                <span class="text-danger small">@Html.ValidationMessageFor(x => x.Cidade)</span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 mb-3">
                <label class="form-label fw-bold">Estado</label>
                <input type="text" asp-for="Estado" class="form-control" />
                <span class="text-danger small">@Html.ValidationMessageFor(x => x.Estado)</span>
            </div>
            <div class="col-md-8 mb-3">
                <label class="form-label fw-bold">CEP</label>
                <input type="text" asp-for="Cep" class="form-control" />
                <span class="text-danger small">@Html.ValidationMessageFor(x => x.Cep)</span>
            </div>
        </div>

        <div class="d-grid gap-2 mt-4">
            <button type="submit" class="btn btn-success btn-lg">Salvar Alterações</button>
            <a class="btn btn-outline-secondary" asp-controller="Contato" asp-action="Index">Voltar para a lista</a>
        </div>
    </form>
</div>