@model ContatoModel
@{
    ViewData["Title"] = "Editar contato";
}

<div class="text-center">
    <h1 class="display-4">Editar Contato</h1>
</div>

<form asp-controller="Contato" asp-action="Alterar" method="post">

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Nome</label>
        <input asp-for="Nome" class="form-control" />
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-group">
        <label>E-mail</label>
        <input asp-for="Email" class="form-control" />
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="form-group">
        <label>Celular</label>
        <input asp-for="Celular" class="form-control" />
        @Html.ValidationMessageFor(x => x.Celular)
    </div>

    <hr />

    <h4>Endereço</h4>

    <div class="form-group">
        <label>Rua</label>
        <input asp-for="Rua" class="form-control" />
        @Html.ValidationMessageFor(x => x.Rua)
    </div>

    <div class="form-group">
        <label>Número</label>
        <input asp-for="Numero" class="form-control" />
        @Html.ValidationMessageFor(x => x.Numero)
    </div>

    <div class="form-group">
        <label>Bairro</label>
        <input asp-for="Bairro" class="form-control" />
        @Html.ValidationMessageFor(x => x.Bairro)
    </div>

    <div class="form-group">
        <label>Cidade</label>
        <input asp-for="Cidade" class="form-control" />
        @Html.ValidationMessageFor(x => x.Cidade)
    </div>

    <div class="form-group">
        <label>Estado</label>
        <input asp-for="Estado" class="form-control" />
        @Html.ValidationMessageFor(x => x.Estado)
    </div>

    <div class="form-group">
        <label>CEP</label>
        <input asp-for="Cep" class="form-control" />
        @Html.ValidationMessageFor(x => x.Cep)
    </div>

    <br />

    <button type="submit" class="btn btn-primary">Alterar</button>
    <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index">Voltar</a>

</form>
